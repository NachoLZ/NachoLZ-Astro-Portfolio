---
const personalImageAlt = "Ignacio Lizana";
import Badge from "@/components/Badge.astro";
import LinkedInIcon from "@/components/icons/LinkedIn.astro";
import MailIcon from "@/components/icons/Mail.astro";
import SocialPill from "@/components/SocialPill.astro";
import GitHubIcon from "@/components/icons/GitHub.astro";
import { getI18N } from "../i18n";
import Upwork from "./icons/Upwork.astro";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16"
      src="/self face square.webp"
      alt={personalImageAlt}
    />
    <a
      href="https://linkedin.com/in/ignacio-lizana"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>{i18n.hero.available}</Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    {i18n.hero.greeting}
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300"
  >
    {i18n.hero.description1}. <strong>{i18n.hero.description2}</strong>
    <span class="text-red-800 dark:text-red-200">
      {i18n.hero.description3}.
    </span>{i18n.hero.description4}
  </p>

  <nav class="flex flex-wrap gap-4 mt-8 md:min-w-full">
    <SocialPill href="mailto:ignaciolizana96@gmail.com">
      <MailIcon class="size-4" />
      {i18n.hero.contact}
    </SocialPill>
    <SocialPill href="https://linkedin.com/in/ignacio-lizana">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
    <SocialPill href="https://github.com/NachoLZ">
      <GitHubIcon class="size-4" />
      GitHub
    </SocialPill>
    <SocialPill href="https://www.upwork.com/freelancers/~01925090a3b319f0de">
      <Upwork class="size-4" />
      Upwork
    </SocialPill>
    <SocialPill href="/cv.pdf" download>
      <svg
        class="size-4"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M3 16.5v2.25A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75V16.5M16.5 12 12 16.5m0 0L7.5 12m4.5 4.5V3"
        ></path>
      </svg>
      {i18n.hero.cv}
    </SocialPill>
  </nav>
</div>
