---
import Layout from "@/layouts/Layout.astro";

import AboutMe from "@/components/AboutMe.astro";
import Briefcase from "@/components/icons/Briefcase.astro";
import CodeIcon from "@/components/icons/Code.astro";
import Experience from "@/components/Experience.astro";
import ProfileCheck from "@/components/icons/ProfileCheck.astro";
import Projects from "@/components/Projects.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import Hero from "@/components/Hero.astro";
import TitleSection from "@/components/TitleSection.astro";
import { getI18N } from "../../i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

// Page titles and descriptions based on language
const pageTitle =
  currentLocale === "en"
    ? "Ignacio Lizana Portfolio - Full-Stack Developer with 5+ years of experience"
    : "Portfolio de Ignacio Lizana - Desarrollador Full-Stack con 5+ años de experiencia";

const pageDescription =
  currentLocale === "en"
    ? "Hire Ignacio Lizana to create your web or mobile application. Computer Engineer and Web Developer. Specialized in creating unique and scalable applications."
    : "Contrata a Ignacio Lizana para crear tu aplicación web o móvil. Ingeniero Civil Informático y Desarrollador Web. Especializado en crear aplicaciones únicas y escalables.";
---

<Layout title={pageTitle} description={pageDescription}>
  <main class="px-4">
    <SectionContainer class="py-16 md:py-36 pl-2 md:px-0">
      <Hero />
    </SectionContainer>
  </main>
  <div class="space-y-24">
    <SectionContainer id="experiencia" class="pl-4 md:px-0">
      <TitleSection>
        <Briefcase class="size-8" />
        {i18n.experience.title}
      </TitleSection>
      <Experience />
    </SectionContainer>

    <SectionContainer id="proyectos" class="px-4 md:px-0">
      <TitleSection>
        <CodeIcon class="size-7" />
        {i18n.projects.title}
      </TitleSection>
      <Projects />
    </SectionContainer>

    <SectionContainer id="sobre-mi" class="px-4 md:px-0">
      <TitleSection>
        <ProfileCheck class="size-8" />
        {i18n.about.title}
      </TitleSection>
      <AboutMe />
    </SectionContainer>
  </div>
</Layout>
